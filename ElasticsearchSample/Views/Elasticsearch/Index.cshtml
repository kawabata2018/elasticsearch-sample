@model ElasticsearchSample.Models.InputModel
@{
    ViewData["Title"] = "Elasticsearch";
}

<div class="container">
    <h3>@ViewData["Title"]</h3>
    <div class="row">
        <div class="col-4">
            <form asp-action="Search" method="post">
                <div class="my-4">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <input type="text" asp-for="CompanyId" class="form-control" />
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                <div class="my-4">
                    <label asp-for="Keyword" class="control-label"></label>
                    <input type="text" asp-for="Keyword" class="form-control" />
                    <span asp-validation-for="Keyword" class="text-danger"></span>
                </div>
                <input type="submit" value="検索" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>
